{
  "name": "restaurants-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "22.14.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "test:unit": "NODE_ENV=test jest",
    "prisma:introspect": "npx prisma db pull",
    "prisma:generate": "npx prisma generate",
    "prisma:push:integration": "npx prisma db push",
    "test:integration": "NODE_ENV=test jest --config=jest.integration.config.js",
    "integration":"./scripts/run-integration.sh"
  },
  "dependencies": {
    "@prisma/client": "6.3.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "jest": "^29.7.0",
    "prisma": "6.3.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  }
}
