{
  "name": "restaurants-api",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "engines": {
    "node": "22.14.0"
  },
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpile-only src/index.ts",
    "start": "node dist/index.js",
    "lint": "eslint .",
    "format": "prettier --write .",
    "lint:fix": "eslint . --fix",
    "lint:format": "prettier --check . && eslint .",
    "test:unit": "NODE_ENV=test jest",
    "prisma:introspect": "DATABASE_URL=file:./restaurants.db npx prisma db pull",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "test:integration": "NODE_ENV=test jest -i --config=jest.integration.config.js",
    "prisma:studio": "DATABASE_URL=file:./test.db npx prisma studio",
    "integration": "./scripts/run-integration.sh"
  },
  "dependencies": {
    "@prisma/client": "6.3.1",
    "bcrypt": "^5.1.1",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "http-status": "^2.1.0",
    "jsonwebtoken": "^9.0.2",
    "swagger-ui-express": "^5.0.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "@faker-js/faker": "^9.5.0",
    "@types/bcrypt": "^5.0.2",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.8",
    "@types/supertest": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.7",
    "@types/yamljs": "^0.2.34",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "jest": "^29.7.0",
    "prettier": "^3.5.1",
    "prisma": "6.3.1",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.24.0"
  }
}
